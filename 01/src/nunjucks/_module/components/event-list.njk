{% macro list( items )%}

<ul class="event-list">
  {% for item in items %}
    <li class="event-list__item">
      <a href="{{ item.url }}">
        <div class="event-list__item-head">
          <img src="{{ item.img }}" alt="" width="240" height="120">
          <span>{{ item.date }}</span>
        </div>
        <div class="event-list__item-body">
          <h3 class="event-list__item-title">{{ item.title }}</h3>
          <p class="event-list__item-text">{{ event.text | safe }}</p>
        </div>
      </a>
    </li>
  {% endfor %}
</ul>

{% endmacro %}
