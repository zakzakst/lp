<style>
.loader {
  position: fixed;
  display: flex;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #f909a0;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  z-index: 10000;
}

.loader__circle {
  width: 40px;
  height: 40px;
  background: #fff;
  border-radius: 50%;
  animation: loaderAnim 2s infinite;
}

@keyframes loaderAnim {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(3);
    opacity: 0;
  }
  99% {
    transform: scale(1);
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}
</style>
