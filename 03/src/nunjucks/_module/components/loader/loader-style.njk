<style>
.loader {
  position: fixed;
  display: flex;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #363f4d;
  justify-content: center;
  align-items: center;
  z-index: 10000;
}
.loader__content {
  width: 100%;
}
.loader__text {
  color: #ffffff;
  text-align: center;
}
.loader__progress {
  width: 100%;
  height: 1px;
  margin-top: 4px;
  background: rgba(255, 255, 255, 0.2);
}
.loader__progress > span {
  display: block;
  width: 0;
  height: 100%;
  background: #ffffff;
  transition: width 0.5s;
}
</style>
